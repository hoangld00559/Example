<Page
    x:Class="ListViewExample.Question2.Question2"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:ListViewExample.Question2"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <Grid>
        <StackPanel>
            <RelativePanel>
                <TextBlock Text="File Name" Margin="15, 20, 0, 0"/>
                <TextBox Margin="100, 15, 0, 0" Width="300"/>
            </RelativePanel>
            <RelativePanel>
                <Button Margin="100, 15, 0, 0">Search</Button>
            </RelativePanel>
            <RelativePanel>
                <TextBlock Text="Picture name:" Margin="100, 15, 0, 0"></TextBlock>
            </RelativePanel>
            <RelativePanel>
                <Image Margin="100, 15, 0, 0" Width="500" Height="300"></Image>
            </RelativePanel>
        </StackPanel>
    </Grid>
</Page>
